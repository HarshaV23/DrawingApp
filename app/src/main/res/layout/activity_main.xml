<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/drawingView_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:padding="1dp"
        android:background="@drawable/background_drawing_view_layout"
        app:layout_constraintBottom_toTopOf="@id/ll_color_pallet"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/iv_bgImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/palletpng"
            android:contentDescription="image"/>

    <com.learning.drawingapp.DrawingView
         android:id="@+id/drawingView"
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:background="#80FFFFFF"/>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_color_pallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/ll_buttons"
        app:layout_constraintTop_toBottomOf="@+id/drawingView_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageButton
            android:id="@+id/clr_red"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/pallet_color"
            android:tag="@color/red"
            android:background="@color/red"
            android:onClick="selectColorFromThePallet"/>

        <ImageButton
            android:id="@+id/clr_black"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/pallet_color"
            android:tag="@color/black"
            android:background="@color/black"
            android:onClick="selectColorFromThePallet"/>

        <ImageButton
            android:id="@+id/clr_blue"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/pallet_color"
            android:tag="@color/blue"
            android:background="@color/blue"
            android:onClick="selectColorFromThePallet"/>

        <ImageButton
            android:id="@+id/clr_green"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/pallet_color"
            android:tag="@color/green"
            android:background="@color/green"
            android:onClick="selectColorFromThePallet"/>

        <ImageButton
            android:id="@+id/clr_violet"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/pallet_color"
            android:tag="@color/purple_700"
            android:background="@color/purple_700"
            android:onClick="selectColorFromThePallet"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_color_pallet">

        <ImageButton
            android:id="@+id/ib_brush"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/paintbrush"/>

        <ImageButton
            android:id="@+id/undoBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_undo"/>
        <ImageButton
            android:id="@+id/imgSelect"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:layout_marginStart="10dp"
            android:src="@drawable/galleryicon"/>
        <ImageButton
            android:id="@+id/imgSave"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:layout_marginStart="10dp"
            android:src="@drawable/imgsave"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>